@{
    ViewData["Title"] = "Uruchom algorytm";
}

<h2>Uruchom algorytm</h2>

<form asp-action="Run" method="post">
    <fieldset>
        <legend>Parametry optymalizacji</legend>
        <div>
            <label for="OptimizationType">Typ optymalizacji:</label>
            <select id="OptimizationType" name="optimizationType" class="form-control">
                <option value="1">Ruletka</option>
                <option value="2">Turniej</option>
            </select>
        </div>
        <div>
            <label for="PopulationSize">Rozmiar populacji:</label>
            <input type="number" name="populationSize" class="form-control" />
        </div>
        <div>
            <label for="NumberOfWorkers">Liczba pracownik√≥w:</label>
            <input type="number" name="numberOfWorkers" class="form-control" />
        </div>
        <div>
            <label for="DaysInWeek">Liczba dni w tygodniu:</label>
            <input type="number" name="daysInWeek" class="form-control" />
        </div>
        <div>
            <label for="PreferenceWeight">Waga preferencji:</label>
            <input type="number" step="0.01" name="preferenceWeight" class="form-control" />
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Uruchom</button>
</form>